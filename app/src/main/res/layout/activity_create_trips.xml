<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etTripName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Trip Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/etCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Country"
        android:inputType="text" />

    <TextView
        android:id="@+id/weatherText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weather condition: Not fetched"
        android:padding="8dp" />

    <EditText
        android:id="@+id/etStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Date (YYYY-MM-DD)"
        android:inputType="date"
        android:focusable="false" />

    <EditText
        android:id="@+id/etEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Date (YYYY-MM-DD)"
        android:inputType="date"
        android:focusable="false" />

    <EditText
        android:id="@+id/etNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notes"
        android:inputType="textMultiLine" />

    <CheckBox
        android:id="@+id/cbBusiness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Business" />

    <CheckBox
        android:id="@+id/cbLeisure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leisure" />

    <CheckBox
        android:id="@+id/cbFamily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Family" />

    <CheckBox
        android:id="@+id/cbAdventure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adventure" />

    <Button
        android:id="@+id/btnCreateTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Trip" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back" />

</LinearLayout>